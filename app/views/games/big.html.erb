<div class="game-page big-screen">
  <%= hidden_field_tag(:game_id, @game.id) %>

  <div class="container py-4">
    <div class="game-header text-center mb-4">
      <h1 class="game-title">LET'S BINGO!</h1>
      <h2 class="game-name">
        <%= @game.name %>
      </h2>
    </div>

    <div class="row g-4">
      <div class="col-12 mx-auto">
        <div class="game-card">
          <div class="text-center">

            <%= render 'games/bingo_title_row' %>

            <div class="container bingo-grid">
              <% board_array = @game.board.to_a %>
              <% 5.times do |row| %>
                <div class="row mb-2">
                  <% 15.times do |col| %>
                    <% num, selected = board_array[col * 5 + row] %>
                    <div class="col px-1">
                      <div id="num_<%= num %>" class="btn w-100 py-2 fs-1 border rounded <%= selected ? 'btn-primary text-white' : 'btn-light' %>">
                        <%= num %>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
