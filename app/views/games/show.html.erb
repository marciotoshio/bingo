
<%= hidden_field_tag(:game_id, @game.id) %>

<h1 class="title">LET'S BINGO!</h1>

<h2>
  <%= @game.name %>
  <% if @player.master %>
    <%= link_to t(:reset), reset_games_path(slug: @game.slug), class: "btn btn-danger", data: { turbo_prefetch: "false" }, onclick: "return confirm('#{j t(:reset_confirm)}')" %>
  <% end %>
</h2>

<div class="row">
  <% if @player.master %>
    <div class="col">
      <%= render 'board' %>
    </div>

    <div class="col">
      <%= render 'game_controls' %>
    </div>
  <% end %>

  <div class="col">
    <%= render 'last_number' %>
    <%= render partial: 'players/show', locals: { player: @player } %>
  </div>
</div>
