<div class="game-page">
  <%= hidden_field_tag(:game_id, @game.id) %>

  <div class="container py-4">
    <div class="game-header text-center mb-4">
      <h1 class="game-title">LET'S BINGO!</h1>
      <h2 class="game-name">
        <%= @game.name %>
        <% if @player.master %>
          <%= link_to t(:reset), reset_games_path(slug: @game.slug), class: "btn btn-danger btn-sm ms-2", data: { turbo_prefetch: "false" }, onclick: "return confirm('#{j t(:reset_confirm)}')" %>
        <% end %>
      </h2>
    </div>

    <div class="row g-4">
      <% if @player.master %>
        <div class="col-12 col-lg-4">
          <div class="game-card">
            <%= render 'board' %>
          </div>
        </div>

        <div class="col-12 col-lg-4">
          <div class="game-card">
            <%= render 'game_controls' %>
          </div>
        </div>
      <% end %>

      <div class="col-12 <%= @player.master ? 'col-lg-4' : 'col-lg-6 mx-auto' %>">
        <div class="game-card">
          <%= render 'last_number' %>
          <%= render partial: 'players/show', locals: { player: @player } %>
        </div>
      </div>
    </div>
  </div>
</div>
